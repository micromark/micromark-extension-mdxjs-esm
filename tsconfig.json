{
  "include": ["**/*.js", "dev/index.d.ts"],
  "exclude": ["coverage/", "lib/", "node_modules/", "index.js"],
  "compilerOptions": {
    "customConditions": ["development"],
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "node16",
    "newLine": "lf",
    "strict": true,
    "target": "es2020"
  }
}
